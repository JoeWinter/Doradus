<!--
BD-31. 
Summary - SPIDER: Implement DISTINCT metric function
-->
<TEST>
<CONNECT/>
<disable-output/>
<DELETE path="_applications/Application/ApplicationKey"/>
<IMPORT>bd.031.SPIDER.defs.xml</IMPORT>
<DEFINE name="response.format" value="xml|json"/>
<enable-output/>

<FOR index="i" from="1" to="2">
    <IF.EQ arg1="${i}" arg2="1">
        <echo>~~~~~~~~~~~~~~</echo>
        <echo>~ XML format ~</echo>
        <echo>~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications" xml="${schema.xml}"/>
        <POST path="Application/Table" xml="${data.xml}"/>
        <enable-output/>
    </IF.EQ>
    <IF.EQ arg1="${i}" arg2="2">
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo>~ JSON format ~</echo>
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications" json="${schema.json}"/>
        <POST path="Application/Table" json="${data.json}"/>
        <enable-output/>
    </IF.EQ>

    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~ Table of Content ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <QUERY path="Application/Table" q="*" f="_all" />
        
    <echo>~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~   Test for Aggregates: DISTINCT ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~~~~~~~~~~~</echo>
    <echo>~ INTEGER ~</echo>
    <echo>~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Table" m="DISTINCT(People)" f="Country" />
    <AGGREGATE path="Application/Table" m="DISTINCT(People)" />

    <echo>~~~~~~~~~~~~~</echo>
    <echo>~ TIMESTAMP ~</echo>
    <echo>~~~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Table" m="DISTINCT(CreateDate)" f="Country"/>
    <AGGREGATE path="Application/Table" m="DISTINCT(CreateDate)" />

    <echo>~~~~~~~~~~~~~</echo>
    <echo>~ STRING SV ~</echo>
    <echo>~~~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Table" m="DISTINCT(City)" f="Country" />
    <AGGREGATE path="Application/Table" m="DISTINCT(Country)" />

    <echo>~~~~~~~~~~~~~</echo>
    <echo>~ STRING MV ~</echo>
    <echo>~~~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Table" m="DISTINCT(MV)" f="Country" />
    <AGGREGATE path="Application/Table" m="DISTINCT(MV)" />

    <DELETE path="_applications/Application/ApplicationKey"/>
</FOR>

<DISCONNECT />
</TEST>
<TEST>
<!--
    ******************************************************
    Key: BD-32, Bug
    Summary: Floating point precision
             When a fetch a double whose value is "1E-10", 
             it comes back as 0.0. 
    ******************************************************
-->
<CONNECT/>
<DEFINE name="response.format" value="xml|json"/>
<disable-output/>
<DELETE path="_applications/Application/ApplicationKey"/>
    <POST path="_applications">
    <XML>
	<application name="Application">
    <key>ApplicationKey</key>
    <options>
		<option name="AutoTables">false</option>
		<option name="StorageService">SpiderService</option>
    </options>
    <tables>
        <table name="Table">
            <fields>
                <field type="double" name="Number"/>
                <field type="double" name="Number1"/>
            </fields>
        </table>
    </tables>
	</application>
    </XML>
    </POST>

    <POST path="Application/Table">
    <XML>
      <batch>
        <docs>
          <doc _ID="1001" >
            <field name="Number">.231</field>
            <field name="int">1000</field>
          </doc>
        </docs>
      </batch>
    </XML>
    </POST>

    <enable-output/>
    <echo>~~~~~~~~~~~</echo>
    <echo>~ AVERAGE ~</echo>
    <echo>~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Table" q="*" m="AVERAGE(Number1)" f="Number" />

<DELETE path="_applications/Application/ApplicationKey"/>

<DISCONNECT/>
</TEST>
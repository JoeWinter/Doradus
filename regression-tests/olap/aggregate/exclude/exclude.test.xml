<!--
Doradus Data Model and Query Language -v2.1
6.4.5.2 INCLUDE and EXCLUDE Functions
-->
<TEST>
<CONNECT/>
<disable-output/>
<DELETE path="_applications/Application/ApplicationKey"/>
<IMPORT>exclude.defs.xml</IMPORT>
<DEFINE name="response.format" value="xml|json"/>
<enable-output/>

<FOR index="i" from="1" to="2">
    <IF.EQ arg1="${i}" arg2="1">
        <echo>~~~~~~~~~~~~~~</echo>
        <echo>~ XML format ~</echo>
        <echo>~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications"     xml="${schema.xml}"/>
        <POST path="Application/shard" xml="${data.xml}"/>
        <enable-output/>
        <POST path="Application/_shards/shard" />
    </IF.EQ>
    <IF.EQ arg1="${i}" arg2="2">
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo>~ JSON format ~</echo>
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications"     json="${schema.json}"/>
        <POST path="Application/shard" json="${data.json}"/>
        <enable-output/>
        <POST path="Application/_shards/shard" />
    </IF.EQ>

    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~ Table of Content ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
	<DEFINE name="response.format" value="xml|json"/>
    <QUERY path="Application/Disk"   q="*" f="_all" shards="shard"/>
    <QUERY path="Application/Folder" q="*" f="_all" shards="shard"/>
    <QUERY path="Application/File"   q="*" f="_all" shards="shard"/>
        
    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~ Test for Exclude ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <AGGREGATE path="Application/Folder" m="COUNT(*)" f="Files.Disk.DiskName" q="NOT Files IS NULL" shards="shard"/>
    <AGGREGATE path="Application/Folder" m="COUNT(*)" f="Files.Disk.DiskName.EXCLUDE('Disk_B')" q="NOT Files IS NULL" shards="shard"/>
    <AGGREGATE path="Application/Folder" m="COUNT(*)" f="Files.FoldersList.EXCLUDE('WINDOWS 1')" q="NOT Files IS NULL" shards="shard"/>
	
    <DELETE path="_applications/Application/ApplicationKey"/>
</FOR>

<DISCONNECT />
</TEST>
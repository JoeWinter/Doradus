<TEST>
<CONNECT/>
<disable-output/>
<DELETE path="_applications/Application/ApplicationKey"/>
<IMPORT>mv-count.defs.xml</IMPORT>
<DEFINE name="response.format" value="xml|json"/>
<enable-output/>

<FOR index="i" from="1" to="2">
    <IF.EQ arg1="${i}" arg2="1">
        <echo>~~~~~~~~~~~~~~</echo>
        <echo>~ XML format ~</echo>
        <echo>~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications" xml="${schema.xml}"/>
        <POST path="Application/shard" xml="${data.xml}"/>
        <enable-output/>
        <POST path="Application/_shards/shard" />
    </IF.EQ>
    <IF.EQ arg1="${i}" arg2="2">
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo>~ JSON format ~</echo>
        <echo>~~~~~~~~~~~~~~~</echo>
        <echo></echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <echo>~ Create application ~</echo>
        <echo>~~~~~~~~~~~~~~~~~~~~~~</echo>
        <disable-output/>
        <POST path="_applications" json="${schema.json}"/>
        <POST path="Application/shard" json="${data.json}"/>
        <enable-output/>
        <POST path="Application/_shards/shard" />
    </IF.EQ>

    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~ Table of Content ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~</echo>
    <QUERY path="Application/Message" q="*" f="_all" shards="shard"/>
    <QUERY path="Application/MessageParticipant" q="*" f="_all" shards="shard"/>
    <QUERY path="Application/Department" q="*" f="_all" shards="shard"/>
        
    <echo>~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~ Test for SV - COUNT ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <QUERY path="Application/Department" q="COUNT(DEP)&gt;0" shards="shard"/>
    <QUERY path="Application/Department" q="COUNT(DEP)&lt;1" shards="shard"/>

    <echo>~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <echo>~ Test for MV - COUNT ~</echo>
    <echo>~~~~~~~~~~~~~~~~~~~~~~~</echo>
    <QUERY path="Application/Department" q="COUNT(MV)&lt;1" shards="shard"/>
    <QUERY path="Application/Department" q="COUNT(MV)&gt;0 AND COUNT(MV)&lt;3" shards="shard"/>
    <QUERY path="Application/Department" q="COUNT(MV)>2" shards="shard"/>
    <QUERY path="Application/Department" q="COUNT(MV)&lt;4" shards="shard"/>

    <DELETE path="_applications/Application/ApplicationKey"/>
</FOR>

<DISCONNECT />
</TEST>